{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": false,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "paths": {
      "@api/*": ["./app/frontend/api/*"],
      "@api": ["@api/index"],
      "@app/*": ["./app/frontend/*"],
      "@admin/*": ["./app/frontend/admin/*"]
    }
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/public"
  ]
}