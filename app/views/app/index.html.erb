<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Authr" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= render_json "environment/settings", "environment-settings-data" %>
    <%= render_json "current_user/whoami", "current-user-data", locals: {current_user: current_user} %>

    <%= vite_client_tag %>
    <%= vite_react_refresh_tag %>
    <%= vite_javascript_tag(current_user.admin ? 'admin.tsx' : 'app.tsx') %>
  </head>

  <body>
  </body>
</html>
